        <a class="btn btn-dark m-1" href="/home/admin">Admin Index</a>
    </div>

    <h1>Utilisateurs enregistr√©s</h1>
    <ul class="list-group">
        {% for user in users %}
            <li class="list-group-item d-flex justify-content-between">
