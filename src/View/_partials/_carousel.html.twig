  <div class="carousel-inner">

    {% for picture in pictures %}      
      <div class="carousel-item {{ loop.first ? "active" : "" }}">
        <img src="/assets/images/photos/{{ picture.id }}.jpg" class="d-block w-100 imgCover myBorderRadius border border-secondary" alt="{{ picture.alt }}">
        <div class="carousel-caption d-none d-md-block">
          <h2 class="text-light">Pop Candy</h2>
          <button type="button" class="btn btn-light rounded-pill">RÃ©server</button>
        </div>
      </div>
