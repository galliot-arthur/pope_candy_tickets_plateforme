{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Merci de confirmer votre achat</h1>
    <div class="card">
        <div class="card-body">
            <h2>Pope Candy - {{ candy_show.title }}</h2>
            {% for key, ticket in tickets %}
                <div class="m-3"><b>1 place tarif {{ ticket.name }} au nom de {{ key }}.</b></div>
            {% endfor %}

            <form method="post" action="/bookings/payment">
                <input
                    type="text"
                    value="{{ id }}"
                    name="id"
                    hidden>
                <input
                    type="text"
                    value="{{ quantity }}"
                    name="quantity"
                    hidden>

                {% for key, ticket, i in tickets %}
                    <input
                        type="text"
                        value="{{ key }}"
                        name="username{{ loop.index }}"
                        hidden>
                    <input
                        type="text"
                        value="{{ ticket.ticket_type }}"
                        name="type{{ loop.index }}"
                        hidden>
                    <input
                        type="text"
                        value="{{ ticket.name }}"
                        name="type{{ loop.index }}"
                        hidden>
                    <input
                        type="text"
                        value="{{ ticket.price }}"
                        name="type{{ loop.index }}"
                        hidden>
                {% endfor %}

                <div class="input-group mb-3">
                <input
                    class="btn btn-dark"
                    type="submit"
                    value="Confirmer mon achat">
                <a href="/bookings/buy/{{ id }}" class="btn btn-outline-secondary">Annuler</a>
            </form>
        </div>
    </div>
{% endblock %}
