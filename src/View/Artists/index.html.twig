{% extends 'layout.html.twig' %}

{% block title %}Afficher la liste des Artistes{% endblock %}

{% block content %}
    <h1>Afficher la liste des Artistes</h1>

    <ul class="list-group">
        {% for artist in artists %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a 
                    class="noUnderline"
                    href="/artists/show/{{ artist.id }}">
                    <b>{{ artist.name }}</b>
                </a>
                <a 
                    class="btn"
                    href="/artists/edit/{{ artist.id }}">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                    Editer
                </a>
                <div>
                    <a 
                        class="btn"
                        href="{{ artist.website }}">
                        <i class="fa fa-globe" aria-hidden="true"></i>
                        Site internet
                        </a>
                </div>
            </li>

        {% else %}
            <li>Aucuns Artistes Ã  afficher</li>
        {% endfor %}
    </ul>
    
{% endblock %}
