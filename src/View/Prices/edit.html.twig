{% extends 'layout.html.twig' %}

{% block content %}
    
    <div class="d-flex justify-content-center mb-4">
        <a class="btn btn-dark m-1" href="/prices/index">Retour à l'index des prix</a>
    </div>

    <h1>Editer en prix {{ prices.id }}</h1>

    <form method="post">
    <input
     type="hidden" 
    value="{{ prices.id }}" 
    name="id">

    <div class="input-group mb-3">
            <label 
                class="input-group-text" 
                for="venuid">
                Numéro de la salle
                </label>
    <input 
    class="form-control"
    type="text" 
    value="{{ prices.venue_id }}" 
    name="venue_id"
    required
    id="venuid"
    placeholder="numéro de la salle">
    </div>
    <div class="input-group mb-3">
            <label 
                class="input-group-text" 
                for="price">
                Prix du ticket d'entrée
                </label>
    <input
    class="form-control"
     type="text"
     value="{{ prices.price}}" 
    name="price"
    required
    id="price"
    placeholder="le prix">
    </div>
    <div class="input-group mb-3">
            <label 
                class="input-group-text" 
                for="tickettype">
                Type de ticket
                </label>
    <input 
    class="form-control"
    type="text"
     value="{{ prices.ticket_type }}"
     name="ticket_type"
     required
     id="tickettype"
     placeholder="type de ticket">
    <input 
    class="btn btn-primary"
    type="submit"
     value="Update">
     </div>
</form>
<br>
    <a class="btn btn-primary"
href="/prices/index">Back to list</a>
{% endblock %}
